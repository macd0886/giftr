            <icon src="platforms/android/res/icons/android/icon-144-xxhdpi.png" density="xxhdpi" />
            <icon src="platforms/android/res/icons/android/icon-192-xxxhdpi.png" density="xxxhdpi" />
            <splash src="platforms/android/res/screens/android/screen-hdpi-landscape.png" density="land-hdpi" />
            <splash src="platforms/android/res/screens/android/screen-ldpi-portrait.png" density="land-ldpi" />
            <splash src="platforms/android/res/screens/android/screen-mdpi-landscape.png" density="land-mdpi" />
            <splash src="platforms/android/res/screens/android/screen-xhdpi-portrait.png" density="land-xhdpi" />
