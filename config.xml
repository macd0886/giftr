            <splash src="platforms/android/res/screens/android/screen-hdpi.-landscapepng" density="port-hdpi" />
            <splash src="platforms/android/res/screens/android/screen-ldpi-portrait.png" density="port-ldpi" />
            <splash src="platforms/android/res/screens/android/screen-mdpi-landscape.png" density="port-mdpi" />
            <splash src="platforms/android/res/screens/android/screen-xhdpi-portrait.png" density="port-xhdpi" />
            <splash src="platforms/android/res/screens/android/screen-xxhdpi-landscape.png" density="port-xxhdpi" />
            <splash src="platforms/android/res/screens/android/screen-xxxhdpi-portrait.png" density="port-xxxhdpi" /> </platform>
        <platform name="ios">
            <allow-intent href="itms:*" />
            <allow-intent href="itms-apps:*" /> </platform>
        <engine name="android" spec="~6.0.0" /> </widget>