<?xml version='1.0' encoding='utf-8'?>
    <widget id="edumedia.ca.macd0886.giftr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
        <name>giftr</name>
        <description> 2017 MAD9022 midterm </description>
        <author email="macd0886@algonquinlive.com" href="http://cordova.io">Sam MacDonald</author>
        <content src="index.html" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="5000" />
        <plugin name="cordova-plugin-whitelist" spec="1" />
        <access origin="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <platform name="android">
            <allow-intent href="market:*" />
            <icon src="platforms/android/res/icons/android/icon-36-idpi.png" density="ldpi" />
            <icon src="platforms/android/res/icons/android/icon-48-mdpi.png" density="mdpi" />
            <icon src="platforms/android/res/icons/android/icon-72-hdpi.png" density="hdpi" />
